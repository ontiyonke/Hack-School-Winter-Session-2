<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.acmhack.ucla.textscramblerskeleton.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/text_scrambler_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="T3XT SCR4MBL3R"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Original"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/reverse_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encrypted"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sdrs"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFF"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-10dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="425dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/input_bg"
                android:scaleType="fitXY"
                android:src="@drawable/input_bg"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/input_bg"
                android:id="@+id/edit_text"
                android:textColor="#3667B8"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="240dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_alignTop="@+id/input_bg"
                android:textColor="#3667B8"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."/>
        </RelativeLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#3667B8"
            android:textAlignment="center"
            android:text="Translate"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="#FFF"/>
    </LinearLayout>
</RelativeLayout>
